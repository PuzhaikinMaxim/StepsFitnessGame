<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bc_item_guild_participant"
    android:padding="5dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_player_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merriweather_regular"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_player_icon"
        app:layout_constraintStart_toEndOf="@+id/iv_player_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Пользователь 1" />

    <TextView
        android:id="@+id/tv_player_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Уровень: 10"
        android:textColor="@color/black"
        android:fontFamily="@font/merriweather_regular"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_player_icon" />

    <ImageView
        android:id="@+id/iv_accept_request"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_checkmark"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_refuse_request"
        app:layout_constraintEnd_toStartOf="@+id/iv_refuse_request"
        app:layout_constraintTop_toTopOf="@+id/iv_refuse_request" />

    <ImageView
        android:id="@+id/iv_refuse_request"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_cross_mark_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>